package com.mycompany.assignment;

/**
 *
 * @author anne
 */
public class grade {
    
       public static void main(String[] args) {
        char grade = 'A';//you can change a letter

        switch (grade) {
            case 'A': System.out.println("Excellent!"); break;
            case 'B': System.out.println("Good job!"); break;
            case 'C': System.out.println("Well done."); break;
            case 'D': System.out.println("You passed."); break;
            case 'F': System.out.println("Try harder next time."); break;
            default: System.out.println("Invalid grade.");
        }
    }
}


