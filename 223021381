package com.mycompany.assignment;

/**
 *
 * @author anne
 */
public class evenodd {
   
      public static void main(String[] args) {
        int number = 5; 

        if (number % 2 == 0) {
            System.out.println(number + " is an even number.");
        } else {
            System.out.println(number + " is an odd number.");
        }
    }  
    
    
}

